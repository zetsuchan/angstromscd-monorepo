{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AngstromSCD",
  "version": "0.1.0",
  "identifier": "com.angstromscd.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "AngstromSCD - Medical Research Assistant",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "decorations": false,
        "transparent": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' http://localhost:*"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "14.0",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "icon": []
  }
}